# Production Environment Variables
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO
GRPC_PORT=50051

# Database Configuration
DB_URL=postgresql://postgres:CHANGE_ME@localhost:5432/opentier
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Ingestion Configuration
INGESTION_CHUNK_SIZE=512
INGESTION_CHUNK_OVERLAP=50
INGESTION_MAX_BATCH_SIZE=100
INGESTION_AUTO_CLEAN=true
INGESTION_GENERATE_EMBEDDINGS=true
INGESTION_MAX_CONTENT_LENGTH=1000000

# Embedding Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384
EMBEDDING_BATCH_SIZE=32

# Scraping Configuration
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
SCRAPING_USER_AGENT=OpenTier Intelligence Bot/1.0

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4o
LLM_BASE_URL=https://api.openai.com/v1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Ollama Configuration Example (Free Local Models)
# LLM_PROVIDER=openai
# LLM_BASE_URL=http://localhost:11434/v1
# LLM_API_KEY=ollama
# LLM_MODEL=llama3

# Additional Ingestion Configuration
INGESTION_CLEANING_STRATEGY=standard
